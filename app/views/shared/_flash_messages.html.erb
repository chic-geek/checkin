<% if notice %>
<div class="message message-success" data-hook="js-message">
  <div class="message-wrap">
    <div class="message-content">
      <%= notice %>
    </div>
  </div>
</div>
<% end %>

<% if alert %>
<div class="message message-danger" data-hook="js-message">
  <div class="message-wrap">
    <div class="message-content">
      <%= alert %>
    </div>
  </div>
</div>
<% end %>
